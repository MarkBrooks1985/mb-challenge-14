<section id="blog">
    {{#each blogs as |blog|}}
    <div class="jumbotron">
        <h1 class="display-4" id="blogTitle">{{blog.title}}</h1>
        <p><span id="authorName">Author:</span> {{user.name}} </p>
        <p><span data-blogid="{{blog.user_id}}" id="datePosted">Created On:</span> {{blog.date}}</p>

        <p class="lead" id="blogBody">{{blog.body}}</p>
        <hr class="my-4">
        <div id="comments">
            {{#each blog.comments as |comment|}}
            <p> {{comment.body}} </p>
            {{/each}}
        </div>
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="/editblog/{{blog_id}}" role="button" id="editBlog">Edit Blog</a>
            <a class="btn btn-primary btn-lg" role="button" id="deleteBlog">Delete Blog</a>
            <a class="btn btn-primary btn-lg" href="/comment{{blog_id}}" role="button" id="addComment">Add Comment</a>
        </p>
    </div>
    {{/each}}
</section>

