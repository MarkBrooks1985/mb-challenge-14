<section id="singleBlog">
    <div class="jumbotron">
        <h1 class="display-4">{{blog.title}}</h1>
        <p><span id="authorName">Author:</span> {{blog.user.username}} </p>
        <p><span data-postID="{{blog.id}}" id="datePosted">Created On:</span> {{blog.date}}</p>

        <p class="lead">{{blog.content}}</p>
        <hr class="my-4">
        <div id="comments">
            {{#each blog.comment as |comment|}}
            <p> {{comment.content}} </p>
            {{/each}}
        </div>
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="/editPost/{{blog.id}}" role="button">Edit Post</a>
            <a class="btn btn-primary btn-lg" role="button" id="deletePost">Delete Post</a>
            <a class="btn btn-primary btn-lg" href="#" role="button">Add Comment</a>
        </p>
    </div>
</section>

<script src="js/blog.js"></script>