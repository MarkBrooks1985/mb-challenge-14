<section id="blog">
    {{#each blogs as |blog|}}
    <div class="blogItem col-md-12">
        <a href='/blog/{{blog.id}}'>
            <div class="card">
            <div class="card-body">
                <h1>{{blog.title}}</h1>
                <h6 class="card-subtitle text-muted">Author: {{blog.user.username}}</h6>
                <p class="card-text">{{blog.content}}</p>   
            </div>
            </div>
        </a>
    </div>
    {{/each}}
</section>